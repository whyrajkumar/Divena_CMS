                    <label asp-for="CategoryId"></label>
                    <select class="form-control" asp-for="CategoryId" asp-items="ViewBag.CategoryList">
                        <option selected value="Select">Select</option>
                    </select>
                    <span asp-validation-for="CategoryId"></span>
