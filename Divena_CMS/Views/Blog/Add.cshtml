            @*<script type="text/javascript" language="javascript">
            CKEDITOR.replace(@Html.IdFor(model => model.Description));
            CKEDITOR.config.allowedContent = true
            CKEDITOR.ignoreEmptyParagraph = true;
        </script>*@
