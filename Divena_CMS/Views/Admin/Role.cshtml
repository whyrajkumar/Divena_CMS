@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

<h1 class="text-white">All Roles</h1>
<a asp-action="CreateRole" class="btn btn-secondary">Create a Role</a>

<table class="table table-sm table-bordered table-bordered">
    <tr><th>ID</th><th>Name Role</th><th>Users</th><th>Update</th><th>Delete</th></tr>
    @foreach (var role in Model)
    {
<tr>
    <td>@role.Id</td>
    <td>@role.Name</td>
    <td i-role="@role.Id"></td>
    <td><a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@role.Id">Update</a></td>
    <td>
        <form asp-action="DeleteRole" asp-route-id="@role.Id" method="post">
            <button type="submit" class="btn btn-sm btn-danger">
                Delete
            </button>
        </form>
    </td>
</tr>}
</table>





