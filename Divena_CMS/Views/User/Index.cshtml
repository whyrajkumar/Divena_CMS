@model IEnumerable<AppUser>

<div class="text-danger" asp-validation-summary="ModelOnly"></div>

<article>
    <h1>@ViewBag.Title</h1>
    <table class="table table-sm table-bordered table-bordered">
        <tr><th>ID</th><th>Name</th><th>Email</th><th></th></tr>
        @if (Model.Count() == 0)
        {
<tr><td colspan="4" class="text-center">No Roles</td></tr>
 }
else
{
foreach (var user in Model)
{
    <tr>
        <td>@user.Id</td>
        <td>@user.UserName</td>
        <td>@user.Email</td>
        <td>
            <form asp-action="Edit" asp-route-id="@user.Id" method="get">
                <button type="submit" class="btn btn-sm btn-danger">Edit</button>
            </form>
        </td>
        <td>
            <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
            </form>
        </td>
    </tr>
}
}
    </table>
    <a class="btn btn-primary" asp-action="Create">Create User</a>
</article>