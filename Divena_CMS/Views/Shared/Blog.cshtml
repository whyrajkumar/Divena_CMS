@model Blog
<tr class="row">
    <td class="col-sm-1"><input type="checkbox" id="@Model.Id" /></td>
    <td class="col-sm-5">@Model.Name
        <div>
            <a asp-action="Add" asp-route-id="@Model.Id">Add</a>
            <a target="_blank" asp-controller="Home" asp-action="ViewBlog" asp-route-url="@Model.Url" asp-route-id="@Model.Id">View</a>
            <a asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
        </div></td>
    <td class="col-sm-3">
        @{
            string status = Model.Status == true ? "Active" : "InActive";
            @status;
        }
    </td>
    <td class="col-sm-3">@String.Format("{0:ddd, MMM d, yyyy}", Model.AddedOn)</td>
</tr>
